{
  "name": "savitri",
  "version": "1.0.0",
  "description": "API server for savitri.in",
  "main": "index.js",
  "scripts": {
    "start": "per-env",
    "start:development": "nodemon --watch 'src/**/*.ts' --exec ts-node -F server.ts",
    "start:production": "ts-node -F server.ts",
    "test": "lab -v -T config/test-transform.js -I '__core-js_shared__'",
    "test-coverage": "lab -c -S -T config/test-transform.js --coverage-path src -r html -o test/coverage.html && open test/coverage.html",
    "dev": "nodemon --watch 'src/**/*.ts' --exec nodejs-dashboard ts-node -L server.ts",
    "prepare-debug-test": "rm -r build && tsc && cp -r test/fixtures build/test",
    "prepare-debug-test-old": "rm -rf build/test && tsc && cp -r data build && cp -r test/fixtures build/test",
    "build": "tsc",
    "compile": "tsc --noEmit",
    "lint": "tslint -c tslint.json './src/**/*.ts' './test/**/*.ts' './config/**/*.ts'",
    "migrate:make": "knex migrate:make",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "seed:make": "knex seed:make",
    "seed": "knex seed:run"
  },
  "pre-commit": {
    "run": [
      "compile",
      "lint"
    ],
    "silent": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/savitri/savitri.git"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "keywords": [
    "sri aurobindo",
    "the mother",
    "savitri"
  ],
  "author": "prashaantt@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/savitri/savitri/issues"
  },
  "homepage": "https://github.com/savitri/savitri#readme",
  "dependencies": {
    "boom": "4.2.0",
    "confidence": "3.0.2",
    "dotenv": "2.0.0",
    "glue": "4.0.0",
    "hapi": "15.2.0",
    "hapi-swagger": "7.4.0",
    "inert": "4.0.2",
    "joi": "9.2.0",
    "knex": "0.12.6",
    "pg": "6.1.0",
    "relish": "0.2.4",
    "savitri-shared": "https://github.com/savitri/shared.git#1.0.1",
    "vision": "4.1.0"
  },
  "devDependencies": {
    "@types/boom": "0.0.32",
    "@types/code": "4.0.0",
    "@types/confidence": "1.4.30",
    "@types/hapi": "13.0.37",
    "@types/joi": "9.0.32",
    "@types/knex": "0.0.35",
    "@types/lab": "11.1.0",
    "@types/node": "6.0.46",
    "code": "4.0.0",
    "exiting": "2.0.1",
    "lab": "11.2.0",
    "labbable": "1.2.0",
    "nodemon": "1.11.0",
    "per-env": "1.0.2",
    "pre-commit": "1.1.3",
    "ts-node": "1.7.0",
    "tslint": "3.15.1",
    "typescript": "2.0.8"
  }
}